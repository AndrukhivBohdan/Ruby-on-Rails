<h1>Новий продукт</h1>

<%= form_with(model: @product, local: true) do |form| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "помилка") %> забороняє зберегти продукт:</h2>
      <ul>
        <% @product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, "Назва" %><br>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :category_id, "Категорія" %><br>
    <%= form.number_field :category_id %>
  </div>

  <div>
    <%= form.label :quantity, "Кількість" %><br>
    <%= form.number_field :quantity %>
  </div>

  <div>
    <%= form.label :price, "Ціна" %><br>
    <%= form.text_field :price %>
  </div>

  <div>
    <%= form.label :description, "Опис" %><br>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.submit "Створити продукт" %>
  </div>
<% end %>
