<!DOCTYPE html>
<html>
  <head>
    <title>Warehouse System</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  </head>

  <body class="bg-light">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
      <div class="container">

        <%= link_to "Warehouse System", root_path, class: "navbar-brand" %>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav me-auto">
            <li class="nav-item"><%= link_to "Home", root_path, class: "nav-link" %></li>
            <li class="nav-item"><%= link_to "About", pages_about_path, class: "nav-link" %></li>
            <li class="nav-item"><%= link_to "Contact", pages_contact_path, class: "nav-link" %></li>
            <li class="nav-item"><%= link_to "Products", products_path, class: "nav-link" %></li>
            <li class="nav-item"><%= link_to "Categories", categories_path, class: "nav-link" %></li>
            <li class="nav-item"><%= link_to "Movements", movements_path, class: "nav-link" %></li>
          </ul>

          <ul class="navbar-nav ms-auto">
            <% if user_signed_in? %>
              <li class="nav-item">
                <span class="navbar-text text-white me-2"><%= current_user.email %></span>
              </li>
              <li class="nav-item">
                <%= link_to "Edit Profile", edit_user_registration_path, class: "btn btn-outline-light btn-sm me-2" %>
              </li>
              <li class="nav-item">
                <%= button_to "Log Out", destroy_user_session_path, method: :delete, class: "btn btn-danger btn-sm", form: { data: { turbo: false } } %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-outline-light btn-sm me-2" %>
              </li>
              <li class="nav-item">
                <%= link_to "Login", new_user_session_path, class: "btn btn-primary btn-sm" %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container">
     <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
       <% if current_user%>
       <% link_to 'Dashboard',static_pages_dashboard_path%>
        <%= current_user.email %>
        <% button_to "Log out", destroy_user_session_path, method: :delete, date: {turbo: false} %> 
      <%else%>
      <% link_to "Landing_page", root_path%>
      <% end %>

    <div class="container mb-3">
      <% if notice %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <%= notice %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% end %>
      <% if alert %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <%= alert %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% end %>
    </div>

    <div class="container">
      <%= yield %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
