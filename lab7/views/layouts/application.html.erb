<!DOCTYPE html>
<html>
  <head>
    <title>Warehouse System</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  </head>

  <body class="bg-light">

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
      <div class="container">

        <%= link_to t("navbar.brand"), root_path, class: "navbar-brand" %>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">

          <ul class="navbar-nav me-auto">
            <li class="nav-item"><%= link_to t("navbar.home"), root_path, class: "nav-link" %></li>
            <li class="nav-item"><%= link_to t("navbar.about"), pages_about_path, class: "nav-link" %></li>
            <li class="nav-item"><%= link_to t("navbar.contact"), pages_contact_path, class: "nav-link" %></li>
            <li class="nav-item"><%= link_to t("navbar.products"), products_path, class: "nav-link" %></li>
            <li class="nav-item"><%= link_to t("navbar.categories"), categories_path, class: "nav-link" %></li>
            <li class="nav-item"><%= link_to t("navbar.movements"), movements_path, class: "nav-link" %></li>
          </ul>

          <ul class="navbar-nav ms-auto">
            <% if user_signed_in? %>

              <li class="nav-item">
                <span class="navbar-text text-white me-2"><%= current_user.email %></span>
              </li>

              <li class="nav-item">
                <%= link_to t("navbar.edit_profile"),
                            edit_user_registration_path,
                            class: "btn btn-outline-light btn-sm me-2" %>
              </li>

              <li class="nav-item">
                <%= button_to t("navbar.logout"),
                              destroy_user_session_path,
                              method: :delete,
                              class: "btn btn-danger btn-sm",
                              form: { data: { turbo: false } } %>
              </li>

            <% else %>

              <li class="nav-item">
                <%= link_to t("navbar.sign_up"),
                            new_user_registration_path,
                            class: "btn btn-outline-light btn-sm me-2" %>
              </li>

              <li class="nav-item">
                <%= link_to t("navbar.login"),
                            new_user_session_path,
                            class: "btn btn-primary btn-sm" %>
              </li>

            <% end %>
          </ul>

        </div>

      </div>

      <div class="language-switcher">
        <%= link_to "EN", url_for(locale: :en), class: "text-white" %> |
        <%= link_to "UA", url_for(locale: :uk), class: "text-white" %>
      </div>

    </nav>

    <div class="container">

      <% if notice %>
        <div class="alert alert-success alert-dismissible fade show">
          <%= notice %>
          <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
      <% end %>

      <% if alert %>
        <div class="alert alert-danger alert-dismissible fade show">
          <%= alert %>
          <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
      <% end %>

      <%= yield %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  </body>
</html>
